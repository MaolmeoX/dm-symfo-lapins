{% extends 'base.html.twig' %}

{% block layout %}
    <h1>Especes list</h1>

    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for espece in especes %}
                <tr>
                    <td><a href="{{ path('espece_show', { 'id': espece.id }) }}">{{ espece.id }}</a></td>
                    <td>{{ espece.nom }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="...">
                            <a role="button" class="btn btn-default" href="{{ path('espece_show', { 'id': espece.id }) }}">show</a>
                            <a role="button" class="btn btn-default" href="{{ path('espece_edit', { 'id': espece.id }) }}">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a class="btn btn-success" href="{{ path('espece_new') }}" role="button">Créer nouvelle espèce</a>
{% endblock %}
